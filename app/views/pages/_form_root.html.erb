<%= form_for @page, :html => { :class => "form-horizontal page" } do |f| %>

  <% if @page.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @page.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :'Имя страницы' if @page.new_record? %>
    <%= f.text_field :name, class: 'form-control' if @page.new_record? %>
  </div>

  <div class="form-group">
    <%= f.label :Заголовок %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Текст %>
    <%= f.text_area :text, class: 'form-control', :size => "70x10" %>
  </div>

  <div class="form-group">
    <div class="actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  pages_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
